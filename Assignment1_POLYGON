#include <iostream>
#include <iostream>
#include <stdlib.h> 
#include<GL/glut.h>



using namespace std;

void drawScene() {
	glClear(GL_COLOR_BUFFER_BIT);
	glColor3f(0.4, 0.4, 0.4);
	//Decagon
	int p1[] = { 200, 100 };
	int p2[] = { 400, 100 };
	int p3[] = { 550, 200 };
	int p4[] = { 600, 325 };
	int p5[] = { 550, 450 };
	int p6[] = { 400, 550 };
	int p7[] = { 200, 550 };
	int p8[] = { 50, 450 };
	int p9[] = { 0, 325 };
	int p10[] = { 50, 200 };
	//Heptagon
	int p11[] = { 750, 150 };
	int p21[] = { 890,150 };
	int p31[] = { 940, 250 };
	int p41[] = { 915, 350 };
	int p51[] = { 820, 410 };
	int p61[] = { 725, 350 };
	int p71[] = { 700, 250 };

	//Hexagon
	int p12[] = { 1140, 100 };
	int p22[] = { 1340, 100 };
	int p32[] = { 1490, 300 };
	int p42[] = { 1340, 480 };
	int p52[] = { 1140, 480 };
	int p62[] = { 990, 300 };

	//Nonagon
	int p13[] = { 150, -100 };
	int p23[] = { 250, -100 };
	int p33[] = { 350, -190 };
	int p43[] = { 370, -290 };
	int p53[] = { 310, -390 };
	int p63[] = { 200, -440 };
	int p73[] = { 90, -390 };
	int p83[] = { 30, -290 };
	int p93[] = { 50, -190 };

	//Octagon
	int p14[] = { 570, -100 };
	int p24[] = { 770, -100 };
	int p34[] = { 920, -250 };
	int p44[] = { 920, -400 };
	int p54[] = { 770, -550 };
	int p64[] = { 570, -550 };
	int p74[] = { 420, -400 };
	int p84[] = { 420, -250 };

	//Pentagon
	int p15[] = { 1070, -50 };
	int p25[] = { 1370, -50 };
	int p35[] = { 1470, -300 };
	int p45[] = { 1220, -500 };
	int p55[] = { 970, -300 };

	//Decagon
	glBegin(GL_POLYGON);
	glVertex2iv(p1);
	glVertex2iv(p2);
	glVertex2iv(p3);
	glVertex2iv(p4);
	glVertex2iv(p5);
	glVertex2iv(p6);
	glVertex2iv(p7);
	glVertex2iv(p8);
	glVertex2iv(p9);
	glVertex2iv(p10);
	glEnd();

	//Heptagon
	glBegin(GL_POLYGON);
	glVertex2iv(p11);
	glVertex2iv(p21);
	glVertex2iv(p31);
	glVertex2iv(p41);
	glVertex2iv(p51);
	glVertex2iv(p61);
	glVertex2iv(p71);
	
	glEnd();
	//Hexagon
	glBegin(GL_POLYGON);
	glVertex2iv(p12);
	glVertex2iv(p22);
	glVertex2iv(p32);
	glVertex2iv(p42);
	glVertex2iv(p52);
	glVertex2iv(p62);

	glEnd();
	//Nonagon
	glBegin(GL_POLYGON);
	glVertex2iv(p13);
	glVertex2iv(p23);
	glVertex2iv(p33);
	glVertex2iv(p43);
	glVertex2iv(p53);
	glVertex2iv(p63);
	glVertex2iv(p73);
	glVertex2iv(p83);
	glVertex2iv(p93);

	glEnd();

	//Octagon
	glBegin(GL_POLYGON);
	glVertex2iv(p14);
	glVertex2iv(p24);
	glVertex2iv(p34);
	glVertex2iv(p44);
	glVertex2iv(p54);
	glVertex2iv(p64);
	glVertex2iv(p74);
	glVertex2iv(p84);
	glEnd();

	//Pentagon
	glBegin(GL_POLYGON);
	glVertex2iv(p15);
	glVertex2iv(p25);
	glVertex2iv(p35);
	glVertex2iv(p45);
	glVertex2iv(p55);
	glEnd();

	glFlush();


}

int main(int argc, char** argv) {
	//Initialize GLUT
	glutInit(&argc, argv);
	glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB);
	glutInitWindowPosition(100, 100);
	glutInitWindowSize(1500, 580*2);
    //Create the window
	glutCreateWindow("Basic Shapes");
	glClearColor(1.0, 1.0, 1.0, 0.0);
	gluOrtho2D(0.0, 1500.0, -580.0, 580.0);
	glutDisplayFunc(drawScene);
	glutMainLoop(); 
	return 0; 
}
//Pentagon , Hexagon , Heptagon , Octagon , Nonagon ,  Decagon 
